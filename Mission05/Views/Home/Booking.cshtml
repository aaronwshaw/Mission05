@{
    ViewData["Title"] = "Price Calculator";
}
<h1>@ViewData["Title"]</h1>

<p>Calculate how much your next snowboarding lesson will cost</p>

<div>
    <label for="hours">Enter Hours Needed:</label> <!--Input number of hours-->
    <input type="number" id="hours" name="hours" min="1" placeholder="Enter a positive number">
</div>

<div>
    <label for="rate">Hourly Rate ($):</label>
    <input type="text" id="rate" value="20" disabled> <!-- Fixed hourly rate -->
</div>

<div>
    <button id="calculate">Calculate Total</button> <!--Calculate button that will refernece the function in site.js-->
</div>

<div>
    <label for="total">Total Cost:</label>
    <input type="text" id="total" disabled> <!-- Output box for total -->
</div>
